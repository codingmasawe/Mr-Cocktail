<h1>Create new Dose for <%= @cocktail.name %></h1>


<div class="container">
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
  <% end %>
</div>
<br>
<br>
<%= link_to "Nevermind, nevermind, take me back...", cocktail_path(@cocktail), class:"btn btn-primary" %>
